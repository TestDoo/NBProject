<!-- new.ejs - 회원가입 페이지 -->

<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <!-- site header -->
        <%- include('../partials/nav') %>

        <div class="div__center">
            <h3>회원 가입</h3>
            <form action="/users" method="POST">
                <div class="form__group">
                    <label for="username">아이디*</label>
                    <div>
                        <input type="text" id="username" name="username" value="" class="form__control" />
                    </div>
                </div>

                <div class="form__group">
                    <label for="name">이름*</label>
                    <div>
                        <input type="text" id="name" name="name" value="" class="form__control" />
                    </div>
                </div>

                <div class="form__group">
                    <label for="email">이메일</label>
                    <div>
                        <input type="text" id="email" name="email" value="" class="form__control" />
                    </div>
                </div>

                <div class="form__group">
                    <label for="password">비밀번호*</label>
                    <div>
                        <input type="password" id="password" name="password" value="" class="form__control" />
                    </div>
                </div>

                <div class="form__group">
                    <label for="passwordConfirmation">비밀번호 확인*</label>
                    <div>
                        <input type="password" id="passwordConfirmation" name="passwordConfirmation" value="" class="form__control" />
                    </div>
                </div>

                <p>
                    <small>*필수입력사항</small>
                </p>

                <div class="form__group">
                    <button type="submit" class="btn__submit"><span>회원가입하기</span></button>
                </div>
            </form>
        </div>

        <!-- footer -->
        <%- include('../partials/footer') %>
    </body>
</html>
