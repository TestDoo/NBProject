<!-- show.ejs - 글 상세 페이지 -->

<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <%- include('../partials/nav') %>

        <div class="div__center">
            <!-- 글 상세 보기 -->
            <div>
                <h5 data-search-highlight="title">글제목 : <%= post.title %></h5>
                <div>
                    <div>
                        <div data-search-highlight="body">글내용 : <%= post.body%></div>
                    </div>
                    <div>
                        <div>
                            <div class=""><span>글쓴이</span> : <span data-search-highlight="write"><%= post.write ? post.write.username : "" %></span></div>
                            <div><span>작성날짜</span> : <span data-date-time="<%= post.createdAt %>"></span></div>
                            <!-- 만약 수정이 되면 -->
                            <% if(post.updatedAt) { %>
                            <div><span>수정날짜</span> : <span data-date-time="<%= post.updatedAt %>"></span></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 뒤로가기, 수정, 삭제 버튼 -->
            <div>
                <a href="/posts<%= getPostQueryString() %>">Back</a>

                <!-- 조건 : 로그인된 상태 + 게시물의 작성자 id와 현재 로그인된 사용자 id 일치 => 수정과 삭제버튼 활성화 -->
                <% if(isAuthenticated && post.write && currentUser.id == post.write.id){ %>
                <a href="/posts/<%= post._id %>/edit<%= getPostQueryString() %>">Edit</a>
                <form action="/posts/<%= post._id %>?_method=delete<%= getPostQueryString(true) %>" method="post">
                    <!-- 
                        javascript:void(0) -> 클릭시 a링크 동작 못하게 하고 onclick 이벤트 발생 
                        onclick 이벤트 -> 정말 삭제? yes or no에 따라 동작
                        no는 no / yes시 form에 submit됨 -> submit 버튼 같은 동작을 한다
                        
                    -->
                    <a href="javascript:void(0)" onclick="confirm('정말 삭제하시겠습니까??')?this.parentElement.submit():null;">Delete</a>
                </form>
                <% } %>
            </div>

            <h4>Comments</h4>

            <% if(comments.length){ %> 
                <div>
                <% comments.forEach(function(comment) { %>
                    <div>
                    <div>
                        <div><%= comment.author.username %></div>
                        <div>
                            <div>
                                <div><%= comment.text %></div>
                                <small>
                                (Created: <span data-date-time="<%= comment.createdAt %>"></span>)
                                </small>
                            </div>
                        </div>
                    </div>
                    </div>
                <% }) %>
                </div>
            <% } %>

            <div> 
                <form action="/comments?postId=<%= post._id %><%= getPostQueryString(true) %>" method="post">
                <fieldset <%= !isAuthenticated?'disabled':'' %>>
                    <div>
                    <div >
                        <textarea name="text" rows="2" class="form__control <%= (commentError.errors.text)?'is-invalid':'' %>"><%= commentForm.form.text %></textarea>
                    </div>
                    <div>
                        <button type="submit">Add Comment</button>
                    </div>
                    </div>
                    <% if(commentError.errors.text){ %>
                    <span class="invalid-feedback"><%= commentError.errors.text.message %></span>
                    <% } %>
                </fieldset>
                </form>
            </div>
        </div>

        <!-- footer -->
        <%- include('../partials/footer') %>
    </body>
</html>
